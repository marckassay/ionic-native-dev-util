{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "newLine": "LF",
    "target": "es5",
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "include": [
    "./lib/**/*"
  ],
  "exclude": [
    "./node_modules/**/*"
  ]
}